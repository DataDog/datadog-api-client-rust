        let s: {{ model|simple_type(render_option=False) }} = {{ model|simple_type(render_option=False) }}::deserialize(deserializer)?;
        Ok(match s {
            {%- for index, value in enumerate(model.enum) %}
            {{ value }} => Self::{{ model["x-enum-varnames"][index] or value.upper() }},
            {%- endfor %}
